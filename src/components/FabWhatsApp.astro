---
import "animate.css";

import { link, currentTimestamp } from "./../js/whatsapp.js";
import profileImage from "../assets/profile-whatsapp.webp";
---

<div class="flex flex-col place-items-end fixed bottom-0 right-0 mr-5 gap-5">
  <!-- Chat -->
  <div class="bg-cover bg-[url('../assets/bg-whatsapp.webp')] w-[360px] rounded-2xl shadow-2xl animate__animated animate__fadeInUp" id="fab-chat">
    <!-- Close button -->
    <div class="absolute top-3 right-3">
      <span id="close-icon" class="cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="w-4 h-4 fill-gray-200 hover:fill-gray-300">
          <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"></path>
        </svg>
      </span>
    </div>
    <!-- Chat Header -->
    <div class="bg-[#008069] w-full rounded-t-2xl p-4 flex gap-2">
      <img src={profileImage.src} alt="Dra. Karina Lima" class="w-[50px] rounded-[50px] before:w-10 before:h-10 before:bg-green-500 before:z-10" />
      <div class="flex flex-col text-white place-content-center">
        <div class="font-bold">Dra. Karina Lima</div>
        <div class="text-xs">Online</div>
      </div>
    </div>

    <!-- Chat Body -->
    <div class="p-5 flex flex-col content-between gap-y-10">
      <div class="flex">
        <!-- Message -->
        <svg class="absolute w-5 h-5 left-3 stroke-white fill-white">
          <path d="M0.772965 3.01404C-0.0113096 1.68077 0.950002 0 2.49683 0H9V17L0.772965 3.01404Z"></path>
        </svg>
        <div class="bg-white rounded-xl rounded-ss-none shadow-lg text-sm p-3">
          <div class="flex gap-3">
            <div>
              <p>Ol√°!</p>
              <p>No que eu posso te ajudar?</p>
            </div>
            <div class="text-xs text-gray-400 place-self-end">
              {currentTimestamp}
            </div>
          </div>
        </div>
      </div>
      <div>
        <a href={link} target="_blank" class="bg-whatsapp rounded-full py-3 px-4 text-white font-bold">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="fill-white w-5 inline-block">
            <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
            <path
              d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
            ></path>
          </svg>
          <div class="inline-block ml-1">Fale comigo no Whatsapp</div>
        </a>
      </div>
    </div>
  </div>

  <a href="#" id="fab-whatsapp" class="mb-5 bg-whatsapp p-4 rounded-full shadow-lg" style="z-index: 9999">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="fill-white w-8 h-8">
      <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
      <path
        d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
      ></path>
    </svg>
  </a>
</div>

<script>
  import { toggleChat } from "./../js/whatsapp.js";
  document.getElementById("fab-whatsapp")?.addEventListener("click", toggleChat);
  document.getElementById("close-icon")?.addEventListener("click", toggleChat);
</script>
